  "author": "Anthony Scavareli <anthony.scavarelli@carleton.ca>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PlumCantaloupe/circles_framework/issues"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "connect-mongo": "^3.2.0",
    "dotenv": "^8.2.0",
    "dotenv-parse-variables": "^0.3.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "express-force-ssl": "^0.3.2",
    "express-session": "^1.17.1",
    "express-socket.io-session": "^1.3.5",
    "helmet": "^3.23.3",
    "jquery": "^3.5.1",
    "jstransformer-markdown-it": "^2.1.0",
    "mailgun-js": "^0.22.0",
    "mongodb": "^3.5.8",
    "mongoose": "^5.9.18",
    "node-sass-middleware": "^0.11.0",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "pug": "^3.0.0",
    "sanitize-html": "^1.26.0",
    "socket.io": "^2.4.0",
    "validator": "^13.0.0"
  },
  "devDependencies": {
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.0.2",
    "jsonwebtoken": "^8.5.1",
    "nodemon": "^2.0.4",
    "passport-jwt": "^4.0.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "scripts": {
    "easyrtc-install": "cd ./node_modules/easyrtc; npm install; cd ../../;",
    "build:dev:client": "webpack src/core/circles_client.js -o node_server/public/global/js/circles_client_bundle.js --mode=development --devtool=source-map --debug:true",
    "build:client": "webpack src/core/circles_client.js -o node_server/public/global/js/circles_client_bundle.js --mode=production",
    "build:dev:worlds": "webpack --config webpack.worlds.js --mode=development --devtool=source-map --debug:true",
    "build:worlds": "webpack --config webpack.worlds.js --mode=production",
    "build:dev": "npm run build:dev:client && npm run build:dev:worlds",
    "build": "npm run build:client && npm run build:worlds",
    "serve:dev": "npm run build:dev && nodemon node_server/app.js",
    "serve": "npm run build && nodemon node_server/app.js",
    "serve:cert": "node node_server/app_cert.js",
    "mongo": "node node_server/mongo.js"
  }
}
